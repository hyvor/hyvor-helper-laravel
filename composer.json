{
    "name": "hyvor/helper-laravel",
    "version": "0.0.9",
    "description": "Helper Package for HYVOR Applications",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hyvor\\Helper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hyvor\\Helper\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Supun",
            "email": "supun@hyvor.com"
        }
    ],
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpstan/phpstan": "^1.10",
        "pestphp/pest": "^2.25"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hyvor\\Helper\\Auth\\AuthServiceProvider",
                "Hyvor\\Helper\\Internationalization\\InternationalizationServiceProvider",
                "Hyvor\\Helper\\Media\\MediaServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "php": "^8.1|^8.2",
        "ext-intl": "*",
        "guzzlehttp/guzzle": "^7.8"
    }
}
